# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/portfolio_db

# Alpaca Trading
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading for development

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-1106-preview

# Risk Management
MAX_DAILY_TURNOVER=0.20  # 20% of NAV
MAX_WEIGHT_DELTA=0.05    # 5 percentage points
MIN_TRADE_VALUE=100.0    # $100 minimum
MIN_TRADE_PERCENT=0.001  # 0.1% minimum
MAX_POSITION_WEIGHT=0.15 # 15% max position size
MIN_HOLD_DAYS=1          # Minimum hold period

# Logging
LOG_LEVEL=INFO
LOG_FILE=portfolio.log

# Development
DEBUG=True
DRY_RUN=True  # Set to False for live trading